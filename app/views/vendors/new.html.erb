<% provide(:title, 'Add vendor') %>
<h1>Add vendor</h1>

<div class="row">
  <div class="span4 offset3">
    <%= form_for(@vendor) do |f| %>

      <%= render 'shared/error_messages', object: f.object %>

      <%= label_tag(:nameVendor, "Vendor name:") %>
      <%= text_field_tag(:nameVendor) %>

      <%= label_tag(:email, "Email:") %>
      <%= text_field_tag(:email) %>

      <%= label_tag(:phone, "Phone:") %>
      <%= number_field_tag(:phone) %>

      <%= label_tag(:itemCategory, "Category:") %>
      <%= select_tag(:itemCategory, options_for_select(@itemCategory)) %>

      <%= f.submit "Add vendor", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
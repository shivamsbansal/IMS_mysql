<% provide(:title, 'All territories') %>
<h1>All territories</h1>

<%= will_paginate @regions %>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Territory Name</th>
      <th>Territory Id</th>
      <th>Region Name</th>
      <th>Edit</th>
    </tr>

  <% @territories.each do |territory| %>
    <tr>
      <td><%=territory.nameTerritory %></td>
      <td><%=territory.idTerritory %></td>
      <td><%=territory.region.nameRegion %></td>
      <td><%=link_to "edit", edit_territory_path(territory[:id]) %></td>
    </tr>     
  <% end %>


  </thead>
</table>

<%= will_paginate @regions %>
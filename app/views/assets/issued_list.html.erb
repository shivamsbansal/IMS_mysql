<% provide(:title, 'Issued Assets') %>
<h1>Issued Assets List</h1>



<table class="table table-striped table-bordered table-condensed">
  <caption Associate</caption>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Date Of Joinin (y-m-d)</th>
      <th>Station</th>
    </tr>

<% if @associate!=nil %>
    <tr>
      <td><%= @associate.name%></td>
      <td><%= @associate.email %></td>
      <td><%= @associate.dateOfJoining %></td>
      <td><%= @associate.station.nameStation %></td>
    </tr>   
<% end %>

  </thead>
</table>



<table class="table table-striped table-bordered table-condensed">
  <caption>Asset Details</caption>
  <thead>
    <tr>
      <th>Asset Serial Number</th>
      <th>Stock Id</th>
      <th>Invoice Number</th>
      <th>Item Name</th>
      <th>Date Of Issue</th>
      <th>Withdraw Asset</th>
    </tr>

	<% if @assets!=nil %>
		<% @assets.each do |list| %>
	    <tr>
	    	<% @stock = list.stock %>
	      <td><%= list.assetSrNo %></td>
	      <td><%=link_to "view", "/asset_list/#{@stock.id}"%></td>
	      <td><%= @stock.invoiceNo %></td>
	      <td><%= @stock.item.nameItem %></td>
	      <td><%= list.issued_item.dateOfIssue %></td>
	      <td><%= link_to "withdraw", "/assets/withdraw_asset/#{list.id}" %></td>
	    </tr>
	<% end %>
<% end %>
  </thead>
</table>
<% provide(:title, 'Add stock') %>
<h1>Add stock</h1> 


<div class="row">
  <div class="span4 offset4">
    <%= form_tag("/stocks/choice", method: :get, remote: true) do %>

      <%= label_tag(:category, "Category:") %>
      <% @itemCategory = categoryList %>
      <%= select_tag(:category, options_for_select(@itemCategory)) %>

      <%= submit_tag "Select a category", class: "btn  btn-primary" %>
  	<% end %>
  </div>
</div>

<div class="row">
  <div class="span4 offset3">
    <%= form_for(@stock) do |f| %>

      <%= render 'shared/error_messages', object: f.object %>

      <%= hidden_field_tag(:id, @stock.id) %>

      <%= label_tag(:station_id, "Station:") %>
      <%  result = user_access_stations(current_user) %>
      <%= select_tag(:station_id, options_from_collection_for_select(result[:stations], "id","nameStation")) %>

      <%= label_tag(:item_id, "Item:") %>
      <%  @items = Item.all %>
      
      <%= select_tag(:item_id, options_from_collection_for_select(@items, "id","nameItem")) %>

      <%= label_tag(:poId, "Procurement Id") %>
      <%= text_field_tag(:poId) %>

      <%= label_tag(:poDate, "Procurement Date:") %>
      <%= date_select(:stock,:poDate, :order => [:day, :month, :year], :start_year => Time.now.year - 20, :end_year => Time.now.year) %>

      <%= label_tag(:invoiceNo, "Invoice Number:") %>
      <%= text_field_tag(:invoiceNo) %>

      <%= label_tag(:invoiceDate, "Invoice Date:") %>
      <%= date_select(:stock,:invoiceDate, :order => [:day, :month, :year], :start_year => Time.now.year - 20, :end_year => Time.now.year) %>

      <%= label_tag(:warrantyPeriod, "Warranty Period:") %>
      <%= timePeriod('warrantyPeriod') %>
      <%= timePeriodType('warrantyPeriod') %>

      <%= label_tag(:initialStock, "Initial Stock:") %>
      <%= text_field_tag(:initialStock) %>

      <%= label_tag(:presentStock, "Present Stock:") %>
      <%= text_field_tag(:presentStock) %>

      <%= label_tag(:issuedReason, "Issued Reason") %>
      <%= text_field_tag(:issuedReason) %>

      <%= f.submit "Add stock", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>


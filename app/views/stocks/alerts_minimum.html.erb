<% provide(:title, 'Stock alerts') %>
<h1>Stock alerts</h1>

<table class="table table-striped table-bordered table-condensed">
  <caption>Minimum Stock level reached</caption>
  <thead>
    <tr>
      <th>Station</th>
      <th>Stock</th>
      <th>Item name</th>
      <th>Minimum stock level</th>
      <th>Present stock</th>
      <th>Remove alert</th>
    </tr>

<% if @minimum_stocks!=nil %>
  <% @minimum_stocks.each do |ms| %>
    <tr>
      <td><%= ms.station.nameStation %></td>
      <td><%= link_to 'details', "/show_stock/#{ms.id}"%></td>
      <td><%= ms.item.nameItem %></td>
      <td><%= ms.item.minimumStock %></td>
      <td><%= ms.presentStock %></td>
      <td><%= link_to 'remove alert', "/remove_alert/#{ms.id}"%></td>
    </tr>     
  <% end %>
<% end %>

  </thead>
</table>
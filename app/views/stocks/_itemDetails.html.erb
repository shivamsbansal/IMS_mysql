
<table class="table table-striped table-bordered table-condensed">
  <caption>Item</caption>
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <% if current_user.admin? %>
      <th>Cost per item</th>
      <% end %>
      <th>Life Cycle</th>
      <th>Lead Time</th>
      <th>Minimum Stock</th>
      <th>Asset Type</th>
      <th>Vendor</th>
      <th>Details</th>
    </tr>

    <tr>
      <td><%= item.codeItem %></td>
      <td><%= item.nameItem %></td>
      <% if current_user.admin? %>
      <td><%= item.cost %></td>
      <% end %>
      <td><%= toSensibleWords(toSensibleTime(item.lifeCycle)) %></td>
      <td><%= toSensibleWords toSensibleTime item.leadTime %></td>
      <td><%= item.minimumStock %></td>
      <td><%= item.assetType.capitalize %></td>
      <td><%= if item.vendor != nil
                item.vendor.nameVendor
              else 
                'No vendor'
              end
          %>
      </td>
      <td><%=link_to "details", "/details/#{item.id}", remote: true %></td>      
    </tr>     


  </thead>
</table>
<table class="table table-striped table-bordered table-condensed">
  <caption><%= "Transfers to #{@station.nameStation}" %></caption>
  <thead>
    <tr>
      <th>Station</th>
      <th>Item name</th>
      <th>PO Id</th>
      <th>PO Date</th>
      <th>Invoice No.</th>
      <th>Invoice Date</th>
      <th>Warranty Period</th>
      <th>Initial Stock</th>
      <th>Present Stock</th>
      <th>Date Of Dispatch</th>
      <th>From</th>
      <th>Acknowledge</th>
    </tr>

<% if @transfers_to!=nil %>
  <% @transfers_to.each do |transfer| %>
    <tr>
      <% list = transfer.stock %>
      <td><%= list.station.nameStation %></td>
      <td><%= list.item.nameItem%></td>
      <td><%= list.poId %></td>
      <td><%= list.poDate.strftime('%d %b %Y') %></td>
      <td><%= list.invoiceNo %></td>
      <td><%= list.invoiceDate.strftime('%d %b %Y') %></td>
      <td><%= toSensibleWords toSensibleTime list.warrantyPeriod %></td>
      <td><%= list.initialStock %></td>
      <td><%= list.presentStock %></td>
      <td><%= transfer.dateOfDispatch.strftime('%d %b %Y') %></td>
      <td><%= Station.find(transfer.from).nameStation %></td>
      <td><%= link_to "acknowledge", "/acknowledge_receipt_stock/#{transfer.id}" %>
    </tr>     
  <% end %>
<% end %>

  </thead>
</table>


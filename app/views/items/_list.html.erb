
<table class="table table-striped table-bordered table-condensed">
  <caption>List</caption>
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Cost per item</th>
      <th>Life Cycle</th>
      <th>Lead Time</th>
      <th>Minimum Stock</th>
      <th>Asset Type</th>
      <th>Vendor</th>
      <th>Details</th>
      <% if current_user.admin? %>
      <th>Edit</th>
      <th>Delete</th>
      <% end %>
    </tr>

<% if @list!=nil %>
  <% @list.each do |list| %>
    <tr>
      <td><%= list.codeItem %></td>
      <td><%= list.nameItem %></td>
      <td><%= list.cost %></td>
      <td><%= list.lifeCycle %></td>
      <td><%= list.leadTime %></td>
      <td><%= list.minimumStock %></td>
      <td><%= list.assetType.capitalize %></td>
      <td><%= if list.vendor != nil
                list.vendor.nameVendor
              else 
                'No vendor'
              end
          %>
      </td>
      <td><%=link_to "details", "/details/#{list.id}", remote: true %></td>      
        <% if current_user.admin? %>
      <td><%=link_to "edit", edit_item_path(list[:id]) %></td>
      <td><%= link_to "delete ", list, method: :delete, data: { confirm: "You sure?" } %></td>
      <% end %>
    </tr>     
  <% end %>
<% end %>

  </thead>
</table>
<% provide(:title, 'Items') %>
<h1>Items</h1>

<div class="row">
  <div class="span4 offset3">
    <%= form_tag("/items/redirect", method: "get") do %>

      <%= label_tag(:category, "Category:") %>
      <%= select_tag(:category, options_for_select(@itemCategory)) %>

      <%= submit_tag "Select a category", class: "btn  btn-primary" %>

  	<% end %>

  </div>
</div>